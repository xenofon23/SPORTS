<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ui.Fragments.InsertAthleteFragment">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="24dp"
        android:text="INSERT ATHLETE"
        android:textAlignment="center"
        android:textSize="24dp"

        />

    <EditText
        android:id="@+id/insertText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="insert athlete id"
        android:inputType="number" />

    <EditText
        android:id="@+id/insertText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Insert name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/insertText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Insert last name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/insertText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Insert city"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/insertText5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Insert country"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/insertText6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Insert sport id"
        android:inputType="number" />

    <EditText
        android:id="@+id/insertText7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Insert year of birth"
        android:inputType="number" />

    <Button
        android:id="@+id/insert_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="insert" />


</LinearLayout>

